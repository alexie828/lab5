<body>
	<div class="container">
		<h1>Congratulations! You have a new friend!</h1>

		<div class="friend">
			<img src="{{imageURL}}" class="img-responsive img-rounded">
			<h3><a class="friendName" href="#">{{name}}</a></h3>
			<p>{{description}}</p>
		</div>
		<a href="/"><h3>Click here to return to your list of friends.</h3></a>
	</div>
	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/hci-friends.js"></script>
</body>
</html>
